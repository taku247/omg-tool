# 取引所API認証情報テンプレート
# 実際の認証情報を入力して .env としてコピーしてください

# Hyperliquid API認証
HYPERLIQUID_API_KEY=your_hyperliquid_api_key_here
HYPERLIQUID_API_SECRET=your_hyperliquid_private_key_here

# Bybit API認証
BYBIT_API_KEY=your_bybit_api_key_here
BYBIT_API_SECRET=your_bybit_api_secret_here

# Binance API認証
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# Gate.io API認証
GATEIO_API_KEY=your_gateio_api_key_here
GATEIO_API_SECRET=your_gateio_api_secret_here

# Bitget API認証
BITGET_API_KEY=your_bitget_api_key_here
BITGET_API_SECRET=your_bitget_api_secret_here

# KuCoin API認証（passphrase必須）
KUCOIN_API_KEY=your_kucoin_api_key_here
KUCOIN_API_SECRET=your_kucoin_api_secret_here
KUCOIN_PASSPHRASE=your_kucoin_passphrase_here

# テストネット設定
USE_TESTNET=true

# セキュリティ設定
MAX_POSITION_SIZE=1000
ENABLE_REAL_TRADING=false